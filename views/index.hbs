    <select name="currency" class="Currency" style="width: 10vw;">
      <option value="USD" selected>USD</option>
      <option value="EUR">EUR</option>
    </select>
  </div>
  <div class="container d-flex flex-column col-2">
    <h3 class="pb-2"><strong>Values</strong></h3>
    <h6><strong>Max: </strong><span class="Max"></span></h6>
    <h6><strong>Min: </strong><span class="Min"></span></h6>
  </div>
</div>

